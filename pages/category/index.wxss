/**搜索**/
.search-wrapper {
  text-align: center;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
}

.search{
  border-radius: 50rpx;
margin-left: 20rpx;
border: 1rpx solid #DEDEDE;
height: 60rpx;
padding: 20rpx;
margin-right: 20rpx;
}
.search_icon{
  position: absolute;
  width:50rpx;
  height:50rpx;
  left: 50rpx;
top: 30rpx;

}

.input-wrapper {
  display: flex;
  flex-direction: row;
  width: 100%;
  text-align: center;
  margin-bottom: 20rpx;
}


/**分类栏**/
.classify{
  margin-top: 10rpx;
}
.left-navbar{
  position:absolute;
  left:0;
  width:25%;
  height:90%;
  background-color:#eee;
  font-size:15px;
}
.left-navbar view{
  height:80rpx;
  line-height: 80rpx;
  text-align:center;
}
.active{
  background-color:#FFF;
  color:red;
  font-size:17px;
}
#right{
  position:absolute;
  right:0;
  width:75%;
  height:90%;
}
.img-banner{
  height:150rpx;
  width:100%;
}
.goods-list{
  display:inline-block;
  margin: 0 0 40rpx 10rpx;
  width:30%;
  text-align: center;
}
.goods-title{
  width:100%;
  font-size:15px;
  font-weight:bold;
  padding:10rpx;
  border:1px solid #eee;
}
.goods{
  width:150rpx;
  font-size:14px;
  margin:15rpx;
  text-align:center;
}
.img{
  width:140rpx;
  height:140rpx;
}