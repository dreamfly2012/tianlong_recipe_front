.search-wrapper {
  padding: 20rpx;
  background: #fff;
}

.search-box {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
}

.search {
  flex: 1;
  background: transparent;
  padding: 10rpx;
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  margin: 0 20rpx;
}

.voice-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #fff;
  margin-left: 10rpx;
}

.voice-btn.recording {
  background: #ff0000;
}

.voice-icon {
  width: 40rpx;
  height: 40rpx;
}

.input-wrapper {
  display: flex;
  flex-direction: row;
  width: 100%;
  text-align: center;
  margin-bottom: 20rpx;
}


/**分类栏**/
.classify{
  margin-top: 10rpx;
}
.left-navbar{
  position:absolute;
  left:0;
  width:25%;
  height:90%;
  background-color:#eee;
  font-size:15px;
}
.left-navbar view{
  height:80rpx;
  line-height: 80rpx;
  text-align:center;
}
.active{
  background-color:#FFF;
  color:red;
  font-size:17px;
}
#right{
  position:absolute;
  right:0;
  width:75%;
  height:90%;
}
.img-banner{
  height:150rpx;
  width:100%;
}
.goods-list{
  display:inline-block;
  margin: 0 0 40rpx 10rpx;
  width:30%;
  text-align: center;
}
.goods-title{
  width:100%;
  font-size:15px;
  font-weight:bold;
  padding:10rpx;
  border:1px solid #eee;
}
.goods{
  width:150rpx;
  font-size:14px;
  margin:15rpx;
  text-align:center;
}
.img{
  width:140rpx;
  height:140rpx;
}